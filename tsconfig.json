{
  // https://nuxt.com/docs/guide/concepts/typescript
  "extends": "./tsconfig.nuxt.json",
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    },
    "typeRoots": ["./node_modules/@types", "./types"],
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "target": "ESNext",
    "skipLibCheck": true
  },
  "include": [
    "./**/*.ts",
    "./**/*.vue",
    "./types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    ".nuxt",
    "dist"
  ]
} 